<% include head.ejs %>
<% include navbar.ejs %>
<div class="container">
    <div class="page-header">
        <div class="pull-right">
            <a href="/auth/google"><img style="max-width: 200px" src="https://developers.google.com/accounts/images/sign-in-with-google.png"></a>
        </div>
        <h1>Login</h1>
    </div>
    <% include message.ejs %>
    <form method="post">
        <input type="hidden" name="_csrf" value="<%=_csrf%>">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Log In</button>
        </div>
    </form>
    <% include footer.ejs %>
</div>
<% include tail.ejs %>
